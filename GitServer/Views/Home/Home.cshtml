@using System.Collections.Generic
@model IEnumerable<string>
@{
    ViewBag.Title = "Home";
}
<h2 class="ui header">仓库列表</h2>
<div class="right">
    <a href="/Home/Create">
        <button class="ui teal right labeled icon button"><i class="right arrow icon"></i>新建仓库</button>
    </a>
</div>
<div class="ui relaxed divided list">
    @foreach (string repo in Model)
    {
        <div class="item">
            <i class="large github middle aligned icon"></i>
            <div class="content">
                @Html.RouteLink(repo, "GetRepositoryHomeView", new { repoName = repo }, new { @class = "header medium ui" })
                <div class="description">Updated 10 mins ago</div>
            </div>
        </div>
    }
